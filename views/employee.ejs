<header>
  <div class="header">

    <div class="header-btn-div">
      <button class="btn btn-outline-primary active employee-list-btn">
        Employee list
      </button>
      <button class="btn btn-outline-primary leave-list-btn">Leave list</button>
      <button class="btn btn-outline-primary signatories-list-btn">
