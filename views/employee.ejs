          <button type="submit" class="btn btn-primary" id="add_dept_butt">Add</button>
        </div>
      </form>

      <form method="post" id="role_form">
        <div class="modal-header" id="role_form_title">
          <h5 class="modal-title"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Department</label>
            <select name="department" id="rdepartment" class="form-control">
              <option value="EMPTY">EMPTY</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Role</label>
            <input type="text" name="role_name" id="rrole_name" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Position</label>
            <select name="position" id="rposition" class="form-control">
              <option value="Member">Member</option>
              <option value="Superior">Superior</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" id="deptid" />
          <input type="hidden" name="action" id="roleaction" value="roleadd" />
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="add_role_butt">Add</button>
        </div>
      </form>

      <form method="post" id="leave_form">
        <div class="modal-header" id="leave_form_title">
          <h5 class="modal-title"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Employee ID</label>
            <input type="text" id="lID" name="lID" class="form-control" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" id="lstartdate" name="start_date" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">End Date</label>
            <input type="date" id="lenddate" name="end_date" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Leave Type</label>
            <select name="type" id="ltype" class="form-control">
              <option value="Vacation">Vacation</option>
              <option value="Sick">Sick</option>
              <option value="Maternity">Maternity</option>
              <option value="Paternity">Paternity</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Superior</label>
            <select name="superior" id="lsuperior" class="form-control">
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="status" id="lstatus" class="form-control">
              <option value="Pending">Pending</option>
              <option value="Approved">Approved</option>
              <option value="Rejected">Rejected</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" id="id" />
          <input type="hidden" name="action" id="leaveaction" value="leave" />
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="leave_butt">Add</button>
        </div>
      </form>
      <form method="post" id="leave_edit_form">
        <div class="modal-header" id="leave_form_edit_title">
          <h5 class="modal-title"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Employee ID</label>
            <input type="text" id="empleaveID" name="empleaveID" class="form-control" disabled>
          </div>
          <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" id="lestartdate" name="start_date" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">End Date</label>
            <input type="date" id="leenddate" name="end_date" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Leave Type</label>
            <select name="type" id="letype" class="form-control">
              <option value="Vacation">Vacation</option>
              <option value="Sick">Sick</option>
              <option value="Maternity">Maternity</option>
              <option value="Paternity">Paternity</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Superior</label>
            <select name="superior" id="lesuperior" class="form-control">
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="status" id="lestatus" class="form-control">
              <option value="Pending">Pending</option>
              <option value="Approved">Approved</option>
              <option value="Rejected">Rejected</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="leID" id="leID" />
          <input type="hidden" name="action" id="leaveeditaction" value="leaveedit" />
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="leave_edit_butt">Add</button>
        </div>
      </form>

      <form method="post" id="signatories_form">
        <div class="modal-header" id="signatories_form_title">
          <h5 class="modal-title"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Employee Name</label>
            <select name="semployee" id="semployee" class="form-control">
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="stitle" id="stitle" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="sstatus" id="sstatus" class="form-control">
              <option value="Active">Active</option>
              <option value="Inactive">Inactive</option>
              <option value="Resigned">Resigned</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="signatoriesid" id="signatoriesid" />
          <input type="hidden" name="action" id="signatoriesaction" value="signatoriesadd" />
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary" id="add_signatories_butt">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

